<?xml version="1.0" encoding="utf-8"?>
<!--物流运输环节需要填写的表单-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/transport_orga_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/transport_orgacode_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="运输单位名称"
                        tools:text="运输单位名称"
                        tools:textColor="@android:color/black"/>
                </android.support.design.widget.TextInputLayout>
                <ImageButton
                    android:id="@+id/transport_orgacode_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <!--上面的运输企业选择与下面的车辆牌照关联同步-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/transport_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transport_orga_linear"
                android:layout_marginTop="20dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/transport_trankcode_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="运输车辆牌号"
                    tools:text="运输车辆牌号"
                    tools:textColor="@android:color/black"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/transport_pure_milk_text"
                android:text="鲜牛奶(KG)"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/transport_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/transport_pure_milk_linear"
                android:orientation="horizontal"
                android:layout_below="@+id/transport_pure_milk_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/transport_pure_milk_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:bsb_bubble_color="@color/colorPrimary"
                    app:bsb_bubble_text_color="@color/colorPrimaryHalf"
                    app:bsb_max="50"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@android:color/holo_green_dark"
                    app:bsb_section_count="5"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@android:color/holo_green_light"/>
                <TextView
                    android:text="是否运输"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.suke.widget.SwitchButton
                    android:id="@+id/transport_pure_milk_switchbtn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/transport_banana_milk_text"
                android:text="香蕉牛奶(KG)"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/transport_pure_milk_linear"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/transport_banana_milk_linear"
                android:orientation="horizontal"
                android:layout_below="@+id/transport_banana_milk_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/transport_banana_milk_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:bsb_bubble_color="@color/colorPrimary"
                    app:bsb_bubble_text_color="@color/colorPrimaryHalf"
                    app:bsb_max="50"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@android:color/holo_green_dark"
                    app:bsb_section_count="5"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@android:color/holo_green_light"/>
                <TextView
                    android:text="是否运输"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.suke.widget.SwitchButton
                    android:id="@+id/transport_banana_milk_switchbtn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>


            <TextView
                android:id="@+id/transport_peanut_milk_text"
                android:text="花生牛奶(KG)"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/transport_banana_milk_linear"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/transport_peanut_milk_linear"
                android:orientation="horizontal"
                android:layout_below="@+id/transport_peanut_milk_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/transport_peanut_milk_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:bsb_bubble_color="@color/colorPrimary"
                    app:bsb_bubble_text_color="@color/colorPrimaryHalf"
                    app:bsb_max="50"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@android:color/holo_green_dark"
                    app:bsb_section_count="5"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@android:color/holo_green_light"/>
                <TextView
                    android:text="是否运输"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.suke.widget.SwitchButton
                    android:id="@+id/transport_peanut_milk_switchbtn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>


            <TextView
                android:id="@+id/transport_highcal_milk_text"
                android:text="高钙奶(KG)"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/transport_peanut_milk_linear"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/transport_highcal_milk_linear"
                android:orientation="horizontal"
                android:layout_below="@+id/transport_highcal_milk_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/transport_highcal_milk_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:bsb_bubble_color="@color/colorPrimary"
                    app:bsb_bubble_text_color="@color/colorPrimaryHalf"
                    app:bsb_max="50"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="@android:color/holo_green_dark"
                    app:bsb_section_count="5"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_progress_in_float="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_track_color="@android:color/holo_green_light"/>
                <TextView
                    android:text="是否运输"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.suke.widget.SwitchButton
                    android:id="@+id/transport_highcal_milk_switchbtn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/driver_name_textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transport_highcal_milk_linear"
                android:layout_marginTop="20dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/driver_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="司机姓名"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/driver_phone_textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/driver_name_textinputlayout"
                android:layout_marginTop="20dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/driver_phone_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="司机电话"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/driver_phone_checklinear"
                android:orientation="horizontal"
                android:layout_below="@+id/driver_phone_textinputlayout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/driver_phone_checkinputlayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/driver_phone_checkedittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="输入验证码"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/driver_phone_checkget_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="获取验证码"/>
            </LinearLayout>
            <com.andexert.library.RippleView
                android:id="@+id/material_rippleview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/driver_phone_checklinear"
                android:layout_marginTop="20dp"
                app:rv_centered="true">
                <Button
                    android:id="@+id/transport_submit_btn"
                    android:text="提交表单"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.andexert.library.RippleView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
